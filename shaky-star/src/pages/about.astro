	<style>
		/* About Page Specific Styles */
		.about-hero {
			min-height: 100vh;
			position: relative;
			display: flex;
			align-items: center;
			justify-content: center;
			overflow: hidden;
			background: linear-gradient(135deg, rgba(0, 0, 0, 0.7), rgba(62, 39, 35, 0.8)), url('/BackgroundStoryTelling.png');
			background-size: cover;
			background-position: center;
			background-attachment: fixed;
		}

		.about-hero::before {
			content: '';
			position: absolute;
			inset: 0;
			background: 
				radial-gradient(circle at 20% 30%, rgba(212, 175, 55, 0.15) 0%, transparent 50%),
				radial-gradient(circle at 80% 70%, rgba(255, 107, 53, 0.15) 0%, transparent 50%);
			animation: breathe 8s ease-in-out infinite;
		}

		@keyframes breathe {
			0%, 100% { opacity: 0.5; }
			50% { opacity: 0.8; }
		}

		.about-hero-content {
			position: relative;
			z-index: 10;
			text-align: center;
			padding: 2rem;
			max-width: 1000px;
		}

		.about-hero h1 {
			font-family: var(--font-display);
			font-size: clamp(3rem, 8vw, 6rem);
			font-weight: 900;
			background: linear-gradient(135deg, var(--color-gold), var(--color-orange-bright), var(--color-red-bright));
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-clip: text;
			margin-bottom: 2rem;
			line-height: 1.2;
		}

		.about-hero p {
			font-size: clamp(1.2rem, 2.5vw, 1.6rem);
			color: var(--color-cream);
			line-height: 1.8;
			opacity: 0.95;
			max-width: 800px;
			margin: 0 auto;
		}

		.story-section {
			position: relative;
			padding: 8rem 2rem;
			background: var(--gradient-bg);
		}

		.story-section:nth-child(even) {
			background: linear-gradient(135deg, rgba(26, 26, 26, 0.9) 0%, rgba(62, 39, 35, 0.9) 100%);
		}

		.story-container {
			max-width: 1200px;
			margin: 0 auto;
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
			gap: 4rem;
			align-items: center;
		}

		.story-text h2 {
			font-family: var(--font-display);
			font-size: clamp(2.5rem, 5vw, 4rem);
			background: var(--gradient-african);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-clip: text;
			margin-bottom: 2rem;
			line-height: 1.2;
		}

		.story-text p {
			font-size: 1.2rem;
			line-height: 2;
			color: var(--color-cream);
			opacity: 0.9;
			margin-bottom: 1.5rem;
		}

		.story-visual {
			position: relative;
			min-height: 400px;
			border-radius: 30px;
			overflow: hidden;
			border: 3px solid var(--color-gold);
			box-shadow: var(--shadow-warm);
		}

		.story-visual::before {
			content: '';
			position: absolute;
			inset: 0;
			background: 
				repeating-linear-gradient(45deg, transparent, transparent 20px, rgba(212, 175, 55, 0.1) 20px, rgba(212, 175, 55, 0.1) 40px),
				linear-gradient(135deg, var(--color-red) 0%, var(--color-orange) 50%, var(--color-gold) 100%);
			opacity: 0.3;
		}

		.constellation-pattern {
			width: 100%;
			height: 100%;
			background-size: cover;
			background-position: center;
			filter: brightness(0.8) contrast(1.2);
		}

		.pattern-diamant {
			background-image: url("/LorigineDuDiamant.png");
		}

		.pattern-orion {
			background-image: url("/LaConstellationOrion.png");
		}

		.values-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
			gap: 2.5rem;
			padding: 4rem 2rem;
			max-width: 1400px;
			margin: 0 auto;
		}

		.value-card {
			background: rgba(62, 39, 35, 0.8);
			border: 2px solid rgba(212, 175, 55, 0.4);
			border-radius: 25px;
			padding: 3rem;
			text-align: center;
			transition: all 0.4s ease;
			position: relative;
			overflow: hidden;
		}

		.value-card::before {
			content: '';
			position: absolute;
			top: -50%;
			left: -50%;
			width: 200%;
			height: 200%;
			background: conic-gradient(from 0deg, transparent, rgba(212, 175, 55, 0.2), transparent 30%);
			animation: rotate 4s linear infinite;
			opacity: 0;
			transition: opacity 0.4s;
		}

		.value-card:hover::before {
			opacity: 1;
		}

		.value-card:hover {
			transform: translateY(-10px);
			border-color: var(--color-orange-bright);
			box-shadow: var(--shadow-warm);
		}

		.value-icon {
			width: 100px;
			height: 100px;
			margin: 0 auto 2rem;
			display: flex;
			align-items: center;
			justify-content: center;
			background: var(--gradient-african);
			border-radius: 50%;
			font-size: 3rem;
			color: var(--color-cream);
			position: relative;
			z-index: 1;
		}

		.value-card h3 {
			font-family: var(--font-display);
			font-size: 1.8rem;
			color: var(--color-gold-light);
			margin-bottom: 1rem;
		}

		.value-card p {
			color: var(--color-cream);
			line-height: 1.8;
			opacity: 0.9;
		}

		.journey-timeline {
			max-width: 1000px;
			margin: 6rem auto;
			padding: 0 2rem;
			position: relative;
		}

		.journey-timeline::before {
			content: '';
			position: absolute;
			left: 50%;
			top: 0;
			bottom: 0;
			width: 3px;
			background: linear-gradient(to bottom, var(--color-red), var(--color-orange), var(--color-gold));
			transform: translateX(-50%);
		}

		.journey-item {
			display: flex;
			gap: 3rem;
			margin-bottom: 5rem;
			position: relative;
		}

		.journey-item:nth-child(even) {
			flex-direction: row-reverse;
		}

		.journey-year {
			min-width: 150px;
			height: 150px;
			display: flex;
			align-items: center;
			justify-content: center;
			font-family: var(--font-display);
			font-size: 2.5rem;
			font-weight: 900;
			background: var(--gradient-african);
			color: var(--color-cream);
			border-radius: 50%;
			box-shadow: var(--shadow-warm);
			position: relative;
			z-index: 10;
			border: 4px solid var(--color-gold);
		}

		.journey-content {
			flex: 1;
			background: rgba(62, 39, 35, 0.8);
			border: 2px solid rgba(212, 175, 55, 0.4);
			border-radius: 25px;
			padding: 3rem;
		}

		.journey-content h3 {
			font-family: var(--font-display);
			font-size: 2rem;
			color: var(--color-gold-light);
			margin-bottom: 1rem;
		}

		.journey-content p {
			color: var(--color-cream);
			line-height: 1.9;
			opacity: 0.9;
			font-size: 1.1rem;
		}

		.cta-section {
			padding: 8rem 2rem;
			text-align: center;
			background: linear-gradient(135deg, rgba(139, 26, 26, 0.5), rgba(62, 39, 35, 0.9));
			position: relative;
			overflow: hidden;
		}

		.cta-section::before {
			content: '';
			position: absolute;
			inset: 0;
			background: url('/BackgroundStoryTelling.png');
			background-size: cover;
			background-position: center;
			opacity: 0.2;
			filter: blur(3px);
		}

		.cta-content {
			position: relative;
			z-index: 10;
			max-width: 800px;
			margin: 0 auto;
		}

		.cta-content h2 {
			font-family: var(--font-display);
			font-size: clamp(2.5rem, 5vw, 4rem);
			background: var(--gradient-african);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-clip: text;
			margin-bottom: 2rem;
		}

		.cta-content p {
			font-size: 1.3rem;
			color: var(--color-cream);
			margin-bottom: 3rem;
			line-height: 1.8;
		}

		@media (max-width: 768px) {
			.story-container {
				grid-template-columns: 1fr;
				gap: 2rem;
			}

			.story-visual {
				min-height: 300px;
			}

			.journey-timeline::before {
				left: 30px;
			}

			.journey-item,
			.journey-item:nth-child(even) {
				flex-direction: column;
				padding-left: 100px;
				gap: 1.5rem;
			}

			.journey-year {
				position: absolute;
				left: 0;
				min-width: 100px;
				height: 100px;
				font-size: 1.8rem;
			}

			.journey-content {
				padding: 2rem;
			}

			.values-grid {
				grid-template-columns: 1fr;
				gap: 2rem;
				padding: 2rem 1rem;
			}

			.value-card {
				padding: 2rem;
			}

			.value-icon {
				width: 80px;
				height: 80px;
				font-size: 2.5rem;
			}

			.about-hero {
				background-attachment: scroll;
			}

			.about-hero-content {
				padding: 1rem;
			}

			.story-section {
				padding: 4rem 1rem;
			}

			.cta-section {
				padding: 4rem 1rem;
			}
		}

		@media (max-width: 480px) {
			.about-hero h1 {
				font-size: 2.5rem;
			}

			.about-hero p {
				font-size: 1.1rem;
			}

			.story-text h2 {
				font-size: 2rem;
			}

			.story-text p {
				font-size: 1rem;
			}

			.story-visual {
				min-height: 250px;
			}

			.journey-year {
				min-width: 80px;
				height: 80px;
				font-size: 1.5rem;
			}

			.journey-item,
			.journey-item:nth-child(even) {
				padding-left: 80px;
			}

			.journey-timeline::before {
				left: 40px;
			}

			.journey-content h3 {
				font-size: 1.5rem;
			}

			.journey-content p {
				font-size: 1rem;
			}

			.value-card h3 {
				font-size: 1.5rem;
			}

			.cta-content h2 {
				font-size: 2rem;
			}

			.cta-content p {
				font-size: 1.1rem;
			}
		}
	</style>
</head>
